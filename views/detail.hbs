<form action="/todos/{{ todo._id }}?_method=DELETE" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-text">
      <input type="checkbox" name="isDone" id="isDone" {{#if todo.isDone}} checked {{/if}} disabled>
    </div>
    <input type="text" class="form-control" placeholder="name" name="name" value="{{ todo.name }}" disabled>
    <div class="input-group-append">
      <a class="btn btn-success" href="/todos/{{ todo._id }}/edit">edit</a>
      <button class="btn btn-danger" type="submit">delete</button>
    </div>
  </div>
</form>