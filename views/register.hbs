<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h2 class="text-center mt-3">Register</h2>
      {{> message}}
      <form action="/users/register" method="post">
        <div class="form-group">
          <label for="name">Name*</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="Enter name" value="{{ name }}">
        </div>
        <div class="form-group">
          <label for="email">Email*</label>
          <input type="email" name="email" id="email" class="form-control" placeholder="Enter email" value="{{ email }}">
        </div>
        <div class="form-group">
          <label for="password">Password*</label>
          <input type="password" name="password" id="password" class="form-control" placeholder="Enter password"
            value="{{ password }}">
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm Password*</label>
          <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"
            placeholder="Enter confirmPassword" value="{{ confirmPassword }}">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Resgister</button>
      </form>
      <p class="lead mt-4">Have a Account?<a href="/users/login">Login</a></p>
    </div>
  </div>
</div>